    $(document).ready(function(){
        // This script will handle the modal behavior
        $('#myModal').on('show.bs.modal', function (e) {
            // Code to execute when the modal is about to be shown
        });

        // Additional custom scripts if needed
    });
</script>
	

</body>
</html>