<section>
    <div style="width: 100%; height: 400px; background-image: url(/primg/istockphoto-1311934969-612x612.jpg); background-size: cover;display: flex; justify-content: center;align-items: center;">
        <h1 style="color: white; font-size: 80px;">Contact Us</h1>
    </div>
</section>

<div  class="map col-sm-11 mt-4 container">
    <iframe  src="https://www.google.com/maps/embed?pb=!1m18!1m12!1m3!1d62879.451379623155!2d78.01945164863281!3d9.936811000000004!2m3!1f0!2f0!3f0!3m2!1i1024!2i768!4f13.1!3m3!1m2!1s0x3b00cf43b2d73531%3A0x73c12e4c5d4633cd!2sRed%20Store!5e0!3m2!1sen!2sin!4v1702449052162!5m2!1sen!2sin" width="100%" height="300" style="border:0;" allowfullscreen="" loading="lazy" referrerpolicy="no-referrer-when-downgrade"></iframe>
  </div>
<section class="contact py-5" id="contact">
	<div style="background-color: white; border-radius: 3px;" class="container py-3">
		<h3 class="heading">Contact</h3>
		<div class="row contact-grids">
			<div class="col-lg-5 contact-left">
				<h4 class="mb-4">Address Info</h4>
				<div class="row">
					<div class="col-1 pr-0 icon">
						<span class="fa fa-map-marker" aria-hidden="true"></span>
					</div>
					<div class="col-11">
						<p>
							RedStore <br>
                            No.369 Malappuram Kerala <br>
						</p>
						<p>Padanilam-673571</p>
					</div>
					<div class="col-1 pr-0 icon my-2">
						<span class="fa fa-phone" aria-hidden="true"></span>
					</div>
					<div class="col-11 my-2">
						<p> +91 9633063728</p>
					</div>
					<div class="col-1 pr-0 icon">
						<span class="fa fa-envelope-open" aria-hidden="true"></span>
					</div>
					<div class="col-11">
						<p><a href="mailto:example@email.com"> redstore@gmail.com</a></p>
					</div>

				</div>
			</div>
			<div class="col-lg-7 mt-lg-0 mt-5 contact-right">
				<h4 class="mb-4">Get In Touch</h4>
				<form method="post" id="submit-form" class="container">
                    <div class="mb-3">
                        <label for="name" class="form-label">Name</label>
                        <input type="text" id="name" name="Name" class="form-control" placeholder="Name" required>
                    </div>
                
                    <div class="mb-3">
                        <label for="email" class="form-label">Email</label>
                        <input type="email" id="email" name="Email" class="form-control" placeholder="Email" required>
                    </div>
                
                    <div class="mb-3">
                        <label for="phone" class="form-label">Phone</label>
                        <input type="text" id="phone" name="Phone" class="form-control" placeholder="Phone" required>
                    </div>
                
                    <div class="mb-3">
                        <label for="message" class="form-label">Message</label>
                        <textarea id="message" name="Message" class="form-control" placeholder="Message..." required></textarea>
                    </div>
                
                    <button type="submit" class="btn btn-primary">Submit</button>
                </form>
                
			</div>
		</div>
	</div>
</section>



<script src="https://code.jquery.com/jquery-3.4.1.min.js"></script>
<script>
	$("#submit-form").submit((e)=>{
            e.preventDefault()
            $.ajax({
                url:"https://script.google.com/macros/s/AKfycbwuAAM5kgZHcNpHMGHLY71I5eTfdWovjCqnhn4XRMLUmIsQLAj0QydCjs7EycNVVoUj/exec",
                data:$("#submit-form").serialize(),
                method:"post",
                success:function (response){
                    alert("Form submitted successfully")
                    window.location.reload()
                    //window.location.href="https://google.com"
                },
                error:function (err){
                    alert("Something Error")
    
                }
            })
        })
</script>




