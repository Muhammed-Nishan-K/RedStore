<meta name="viewport" content="width=device-width, initial-scale=1.0">
    <!-- Add Bootstrap CSS -->
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0/css/bootstrap.min.css">
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css" rel="stylesheet" />
    <!-- Google Fonts -->
    <link href="https://fonts.googleapis.com/css?family=Roboto:300,400,500,700&display=swap" rel="stylesheet" />
    <!-- MDB -->
    <link href="https://cdnjs.cloudflare.com/ajax/libs/mdb-ui-kit/6.4.2/mdb.min.css" rel="stylesheet"/>

<div>
<!-- CONTENT -->
<section id="content">
    <!-- NAVBAR -->

    <!-- NAVBAR -->

    <!-- MAIN -->
    <main>
    

        
        <div class="table-data">
            <div class="order">
                <div class="head">
                    <h3>Recent Orders</h3>
                    <i class='bx bx-search' ></i>
                    <i class='bx bx-filter' ></i>
                </div>
                <table>
                    <thead>
                        <tr>
                            <th>Image</th>
                            <th>User</th>
                            
                            <th>Date Order</th>
                            <th>Status</th>
                            <th>Edit status</th>
                        </tr>
                    </thead>
                    <tbody>
                        <% for(let i=0;i<order.length;i++){%>
                        <tr>
                            <td>
                                <img src="primg/<%=order[i].productName[0].image[0]%>">
                            </td>
                            <td><%=order[i].email%></td>
                            <td><%=order[i].date%></td>
                                <% if(order[i].status=='pending'){ %>
                                    <td><span class="status pending"><%=order[i].status  %></span></td>
                                    <% }else if(order[i].status=='Shipped'){ %>
                                    <td><span class="status shipped"><%=order[i].status  %></span></td>
                                    <% }else if(order[i].status=='Delivered'){ %>
                                    <td><span class="status" style="background-color: green;"><%=order[i].status %></span></td>
                                    <% }else if(order[i].status=='Canceled'){ %>
                                        <td><span class="status" style="background-color: red;"><%=order[i].status  %></span></td>
                                        <% }else if(order[i].status=='Returned'){ %>
                                        <td><span class="status" style="background-color: brown;"><%=order[i].status  %></span></td>
                                   <% } %>
                              <td>
                                <i class="fa-regular fa-pen-to-square" data-toggle="modal" data-target="#exampleModal<%= order[i]._id %>"></i>
                                <!-- Modal -->
                                <div class="modal" id="exampleModal<%= order[i]._id %>" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
                                    <div class="modal-dialog" role="document">
                                        <div class="modal-content">
                                            <div class="modal-header">
                                                <h5 class="modal-title" id="exampleModalLabel">Choose an Option</h5>
                                                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                                                    <span aria-hidden="true">&times;</span>
                                                </button>
                                            </div>
                                            <div class="modal-body">
                                                <form action="/change/status?id=<%=order[i]._id %>" method="post">
                                                    <div class="form-check">
                                                        <input class="form-check-input" type="radio" name="exampleRadios" id="option1" value="pending" <%= order[i].status === 'pending' ? 'checked' : '' %>>
                                                        <label class="form-check-label" for="option1">
                                                            Pending
                                                        </label>
                                                    </div>
                                                    <div class="form-check">
                                                        <input class="form-check-input" type="radio" name="exampleRadios" id="option2" value="Delivered" <%= order[i].status === 'Delivered' ? 'checked' : '' %>>
                                                        <label class="form-check-label" for="option2">
                                                            Delivered
                                                        </label>
                                                    </div>
                                                    <div class="form-check">
                                                        <input class="form-check-input" type="radio" name="exampleRadios" id="option3" value="Canceled" <%= order[i].status === 'Canceled' ? 'checked' : '' %>>
                                                        <label class="form-check-label" for="option3">
                                                            Canceled
                                                        </label>
                                                    </div>
                                                    <div class="form-check">
                                                        <input class="form-check-input" type="radio" name="exampleRadios" id="option4" value="Returned" <%= order[i].status === 'Returned' ? 'checked' : '' %>>
                                                        <label class="form-check-label" for="option4">
                                                            Returned
                                                        </label>
                                                    </div>
                                                    <div class="modal-footer">
                                                        <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>                
                                                        <button type="submit" class="btn btn-primary">Save changes</button>
                                                    </div>
                                                </form>
                                                
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </td>
                            <td><div>
                                <a href="/orderdetailsad?id=<%= order[i]._id %>" style="background-color: rgb(245, 234, 234);" class="btn border-shadow update">
                                    <p style="padding: 0px;margin: 0px; color: rgb(0, 0, 0);">Details</p>
                                </a>
                            </div></td>
                        </tr>
                        <%}%>
                    </tbody>
                </table>
            </div>
           

        
    </main>
    <!-- MAIN -->
</section>
</div>
	
	<!-- CONTENT -->
	
    <script src="https://code.jquery.com/jquery-3.2.1.slim.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/popper.js@1.12.9/dist/umd/popper.min.js"></script>
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0/js/bootstrap.min.js"></script>
	<script src="js/adminserver.js"></script>
</body>
</html>

