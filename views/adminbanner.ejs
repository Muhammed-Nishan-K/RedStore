<div>
<!-- CONTENT -->
<section id="content">
    <!-- NAVBAR -->

    <!-- NAVBAR -->

    <!-- MAIN -->
    <main>
    

        
        <div class="table-data">
            <div class="order">
                <div class="head">
                    <h3>Banners</h3>
                    <i class='bx bx-search' ></i>
                    <i class='bx bx-filter' ></i>
                </div>
                <form action="/api/addbanner" method="post" enctype="multipart/form-data">
                    <div class="custom-file">
                        <input type="file" class="custom-file-input" id="image" name="image">
                        <label class="custom-file-label" for="image">Choose file</label>
                    </div>
                <button style="border: none;" type="submit">
                    <a style="background-color: rgb(245, 234, 234);" class="btn border-shadow update">
                        <p style="padding: 0px;margin: 0px; color: rgb(0, 0, 0);"">ADD Banner</p>
                    </a>
                </button>
                    
                </form>
                
                <br>
                <br>
                
            </div>
            <section>
                <div class="container my-5">
                  <header style="width: 100%; display: flex;justify-content: center;" class="mb-4">
                    <h3>Images</h3>
                  </header>
              
                  <div class="row">
                    <% for(var i = 0; i < banner.length; i++) { %>
                    <div class=" d-flex">
                      <div class="card w-100 my-2 border-" style=" width: 100%;box-shadow: 0 10px 36px rgba(0, 0, 0, 0.15);">
                          <img  src="primg/<%=banner[i].image%>" class="card-img-top" style="height: 400px; width: 100%;" />
                          <a href="/api/bannerdlt?id=<%= banner[i]._id %>"  class="btn btn-light border px-2 pt-2 icon-hover" ><i class="fas fa-trash fa-lg text-secondary px-1"></i></a>
                      </div>
                      
                    </div>
                    
                    <% }%>
                      </div>
                </div>
              </section>

        
    </main>
    <!-- MAIN -->
</section>
</div>
	
